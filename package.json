{
	"name": "hello-world",
	"version": "0.0.0",
	"license": "MIT",
	"bin": "dist/cli.js",
	"type": "module",
	"engines": {
		"node": ">=16"
	},
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"test": "npm run format:check && npm run lint && NODE_OPTIONS='--no-warnings=DEP0180' ava",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"lint": "eslint \"**/*.{ts,tsx}\""
	},
	"files": [
		"dist"
	],
	"dependencies": {
		"ink": "^5.1.0",
		"pastel": "^3.0.0",
		"react": "^18.3.0",
		"zod": "^3.24.1"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^7.0.0",
		"@types/react": "^18.3.0",
		"@vdemedes/prettier-config": "^2.0.1",
		"ava": "^6.2.0",
		"chalk": "^5.3.0",
		"eslint": "^9.17.0",
		"@typescript-eslint/eslint-plugin": "^8.18.0",
		"@typescript-eslint/parser": "^8.18.1",
		"eslint-plugin-react": "^7.37.2",
		"eslint-plugin-react-hooks": "^5.1.0",
		"ink-testing-library": "^4.0.0",
		"prettier": "^3.4.2",
		"ts-node": "^10.9.1",
		"typescript": "^5.7.2"
	},
	"ava": {
		"extensions": {
			"ts": "module",
			"tsx": "module"
		},
		"nodeArguments": [
			"--import=data:text/javascript,import { register } from 'node:module'; import { pathToFileURL } from 'node:url'; register('ts-node/esm', pathToFileURL('./'));"
		]
	}
}
